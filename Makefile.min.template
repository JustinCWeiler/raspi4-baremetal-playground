BIN = bin
OUT = out
SRC = src
INC = include

LDSCRIPT=$(SRC)/link.ld

PREFIX = aarch64-none-elf
CCBIN = ../$(PREFIX)/bin

OBJS := $(wildcard $(SRC)/*.[cS])
OBJS := $(patsubst $(SRC)/%.c, $(BIN)/%.o, $(OBJS))
OBJS := $(patsubst $(SRC)/%.S, $(BIN)/%.o, $(OBJS))

ifndef SPEED
SPEED = -Og
endif

ifndef TARGET
TARGET = kernel.img
endif

TARGETBASE = $(basename $(TARGET))

CC = $(CCBIN)/$(PREFIX)-gcc
CFLAGS = -ffreestanding -mcpu=cortex-a72 $(SPEED) -Wall -Wextra -Werror -I$(INC) -MD
ASFLAGS = -mcpu=cortex-a72 -Wall -Wextra -Werror -I$(INC)
LD = $(CCBIN)/$(PREFIX)-ld
LDFLAGS =
OCP = $(CCBIN)/$(PREFIX)-objcopy
ODMP = $(CCBIN)/$(PREFIX)-objdump

all: $(OUT)/$(TARGET) $(OUT)/$(TARGETBASE).list
clean:
	rm -rf $(BIN) $(OUT)

$(BIN):
	mkdir $(BIN)
$(OUT):
	mkdir $(OUT)

$(BIN)/%.o: $(SRC)/%.c | $(BIN)
	$(CC) $(CFLAGS) -c $< -o $@
$(BIN)/%.o: $(SRC)/%.S | $(BIN)
	$(CC) $(ASFLAGS) -c $< -o $@

$(OUT)/$(TARGETBASE).elf: $(LDSCRIPT) $(OBJS) | $(OUT)
	$(LD) $(LDFLAGS) -T $^ -o $@

$(OUT)/$(TARGET): $(OUT)/$(TARGETBASE).elf | $(OUT)
	$(OCP) -Obinary $< $@

$(OUT)/$(TARGETBASE).list: $(OUT)/$(TARGETBASE).elf | $(OUT)
	$(ODMP) -D $< > $@

-include $(OBJS:.o=.d)

.PHONY: clean all
.SILENT: $(BIN) $(OUT)
